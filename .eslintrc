{
    "plugins": [
      "prettier"
    ],
    
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "script",
      "ecmaFeatures": {
        "jsx": false
      }
    },
    
    "env": {
      "browser": false,
      "node": true,
      "jest": true
    },
    "ignorePatterns": [
      "node_modules/",
      ".eslintrc.js"
    ],
    
    "rules": {
      "prettier/prettier": ["error", 
      {
        "endOfLine": "auto"
      }]
    }
}